{
  "manifest_version": 3,
  "name": "CashBFF",
  "version": "0.2.0",
  "description": "See prices in hours of your life",
  "permissions": ["storage", "alarms"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["analytics.js", "content.js"],
      "css": ["styles.css"],
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
